<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/common_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/commen_update"/>
        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="品种:"
                android:textSize="18sp"/>
            <!--购买品种-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/et_vccultivar" />
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="类别:"
                android:textSize="18sp"/>
            <!--购买类型-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/et_itype"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="时间:"
                android:textSize="18sp"/>
            <!--购买时间-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/et_dtbuy" />
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="数量:"
                android:textSize="18sp"/>
            <!--购买数量-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/et_fnum" />
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="购买人:"
                android:textSize="18sp"/>
            <!--购买人-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/vcbuyman" />
        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="生产单位:"
                android:textSize="18sp"/>
            <!--生产单位-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/vcmadecomp" />
        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="销售单位:"
                android:textSize="18sp"/>
            <!--销售单位-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/vcsalecomp" />
        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="入库时间:"
                android:textSize="18sp"/>
            <!--入库时间-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/dtinstoredate" />
        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="入库人:"
                android:textSize="18sp"/>
            <!--入库人-->
            <EditText
                android:layout_weight="1"
                android:background="@drawable/common_shape_edit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/vcinstoreman" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_update"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_btn"
            android:text="确认修改"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>
