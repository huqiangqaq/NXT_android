<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_main_bg"
    tools:context="com.nxt.moderagricultrue.MainActivity">

    <include layout="@layout/com_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_01"
                    android:gravity="center_horizontal|bottom"
                    android:background="@mipmap/bg_01"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_01"
                    android:text="资料购进"
                    style="@style/tv_main_1"/>

                <TextView
                    android:id="@+id/tv_02"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/bg_02"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_02"
                    android:text="资料发放"
                    style="@style/tv_main_1"/>

                <TextView
                    android:id="@+id/tv_03"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/bg_03"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_03"
                    android:text="生产区管理"
                    style="@style/tv_main_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_04"
                    android:gravity="center_horizontal|bottom"
                    android:background="@mipmap/bg_04"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_04"
                    android:text="地块信息"
                    style="@style/tv_main_1"/>

                <TextView
                    android:id="@+id/tv_05"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/bg_05"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_05"
                    android:text="地块整理"
                    style="@style/tv_main_1"/>

                <TextView
                    android:id="@+id/tv_06"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/bg_06"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_06"
                    android:text="播种信息"
                    style="@style/tv_main_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_07"
                    android:gravity="center_horizontal|bottom"
                    android:background="@mipmap/bg_07"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_07"
                    android:text="施肥信息"
                    style="@style/tv_main_1"/>

                <TextView
                    android:id="@+id/tv_08"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/bg_07"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_08"
                    android:text="灌溉信息"
                    style="@style/tv_main_1"/>

                <TextView
                    android:id="@+id/tv_09"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/bg_09"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_09"
                    android:text="病虫害防治"
                    style="@style/tv_main_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_10"
                    android:gravity="center_horizontal|bottom"
                    android:background="@mipmap/bg_10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_10"
                    android:text="采集记录"
                    style="@style/tv_main_1"/>

                <TextView
                    android:id="@+id/tv_11"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/bg_11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_11"
                    android:text="倒茬记录"
                    style="@style/tv_main_1"/>

                <TextView
                    android:id="@+id/tv_12"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/bg_03"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_03"
                    android:text="人员管理"
                    style="@style/tv_main_1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
